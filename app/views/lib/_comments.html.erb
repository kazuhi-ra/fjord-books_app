<h2><%= Comment.model_name.human %></h2>
<div class="comments-wrapper">
  <% comments.each do |comment| %>
    <div class="comment-wrapper">
      <div>
        <%= comment.user.name || comment.user.email %> |
        <%= l comment.created_at, format: :short %>
      </div>
      <div><%= comment.content %></div>
    </div>
  <% end %>
</div>
